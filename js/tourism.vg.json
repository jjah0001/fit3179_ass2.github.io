{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "English Proficiency with regards to the Number of Tourists",
     "width":450,
     "height": 550,
    "data": {
      "url": "https://raw.githubusercontent.com/jjah0001/fit3179_ass2.github.io/master/data/JoinedData5.csv"
    },
    "params": [
      {
        "name": "Min_GDP",
  
        "value": 15,
        "bind": {"input": "range", "min": 0, "max": 20, "step": 0.5}
      }
    ],
    "transform": [
      {"filter": "datum.tourist_no > 0"},
      {"filter": "datum.tourism_gdp < Min_GDP"}
    ],
    "encoding": {
      "x": {
        "field": "Score",
        "type": "quantitative",
        "scale": {"domain": [350, 680]}
      },
      "y": {
        "field": "tourist_no",
        "type": "quantitative",
        "scale": {"type":"log","domain": [200000, 280000000]},
        "title": "Number of Tourists that visited in 2019"
      }
    },
    "layer": [
      {
        "mark": {
          "type": "text",
          "align": "right",
          "baseline": "middle",
          "dx": -12,
          "fontSize": 11.5,
          "fontStyle": "italic"
        },
        "encoding": {
          "text": {"field": "Country", "type": "nominal"},
          "color": {"value": "black"},
          "opacity": {
            "condition": {
              "test": "datum['Country'] == 'Mexico' || datum['Country'] == 'Luxembourg' || datum['Country'] == 'Malaysia' ||  datum['Country'] == 'Thailand' || datum['Country'] == 'United Arab Emirates' ||datum['Country'] == 'France' || datum['Country'] == 'Croatia'"
            },
            "value": 0
          }

        }
      },
      {
        "mark": "point",
        "encoding": {
          "color": {"field": "Band", "type": "nominal"},
          "size": {"field":  "tourism_gdp", "type": "quantitative", "title": "Tourism Contribution to GDP (%)"},
          "opacity": {"value": 0.6},
          "tooltip": [
            {"field": "Country", "type": "nominal"},
            {"field": "tourist_no", "type":"quantitative", "title": "Number of Tourists in 2019"},
            {"field": "tourism_gdp", "type": "quantitative", "title": "Tourism Contribution to GDP (%)"},
            {"field": "Score", "type": "quantitative", "title": "English Proficiency Index", "format": ","},
            {"field": "Band", "type":"ordinal"}
          ]
        }
      }
    ]
  }