{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 1000,
  "height": 488,
  "params": [
    {
      "name": "zoom_level",
      "value": 190,
      "bind": {
        "input": "range",
        "min": 185,
        "max": 785,
        "step": 10,
        "name": "Zoom: "
      }
    },
    {
      "name": "center_to",
      "value": [0, 0],
      "bind": {
        "input": "select",
        "options": [
          [-61.3269, -4.442],
          [15.2551, 54.526],
          [34.5085, -8.7832],
          [42.551, 29.2985],
          [68.8319, 45.4507],
          [76.4563, 25.0376],
          [106.5348, 38.7946],
          [115.6628, -2.218],
          [0, 0]
        ],
        "labels": [
          "Latin America",
          "Europe",
          "Africa",
          "Middle East",
          "Central Asia",
          "South Asia",
          "East Asia",
          "Southeast Asia",
          "World"
        ],
        "name": "Map Centre: "
      }
    },
    {
      "name": "colonialism",
      "value": null,
      "bind": {
        "input": "select",
        "options": ["Yes", "No", null],
        "labels": [
          "Former ðŸ‡¬ðŸ‡§/ðŸ‡ºðŸ‡¸ colonies",
          "Never ðŸ‡¬ðŸ‡§/ðŸ‡ºðŸ‡¸ colonies",
          "Both"
        ],
        "name": "Colonial History: "
      }
    }
  ],
  "title": "English Proficiency of Participating Countries (English First, 2021)",
  "projection": {
    "type": "equalEarth",
    "center": {"expr": "center_to"},
    "scale": {"expr": "zoom_level"}
  },
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/jjah0001/FIT3179/main/Assignment2/data/ne_50m.json",
        "format": {"type": "topojson", "feature": "ne_50m_ocean"}
      },
      "mark": {"type": "geoshape", "fill": "aliceblue"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/jjah0001/FIT3179/main/Assignment2/data/ne_50m.json",
        "format": {"type": "topojson", "feature": "ne_50m_admin_0_countries"}
      },
      "mark": {"type": "geoshape", "fill": "#f7f1bd", "stroke": "darkgrey"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/jjah0001/FIT3179/main/Assignment2/data/Proficiency_with_long_lat.csv"
      },
      "params": [
        {"name": "hover", "select": {"type": "point", "on": "mouseover"}}
      ],
      "transform": [
        {"filter": "colonialism == null || datum.Colony == colonialism"}
      ],
      "mark": {"type": "circle"},
      "encoding": {
        "longitude": {"field": "Long", "type": "quantitative"},
        "latitude": {"field": "Lat", "type": "quantitative"},
        "size": {
          "field": "Score",
          "type": "quantitative",
          "title": "English Proficiency Index",
          "scale": {
            "domain": [450, 500, 550, 600],
            "type": "threshold",
            "range": [20, 40, 80, 115, 175]
          }
        },
        "color": {
          "field": "Colony",
          "type": "nominal",
          "title": "Was it a former UK/US colony?",
          "scale": {"domain": ["Yes", "No"], "range": ["#074cfa", "#ED03FC"]},
          "legend": null
        },
        "opacity": {
          "condition": {"param": "hover", "value": 0.8},
          "value": 0.2
        },
        "tooltip": [
          {"field": "Country", "type": "nominal"},
          {"field": "Score", "type": "quantitative"},
          {"field": "Band", "type": "ordinal"},
          {
            "field": "Colony",
            "type": "nominal",
            "title": "Former ðŸ‡¬ðŸ‡§/ðŸ‡ºðŸ‡¸ Colony"
          }
        ]
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/jjah0001/FIT3179/main/Assignment2/data/Proficiency_with_long_lat.csv"
      },
      "transform": [
        {"filter": "colonialism == null || datum.Colony == colonialism"},
        {
        "window": [{"op": "rank", "as": "ranking"}],
        "sort": [{"field": "Score", "order":
        "descending"}]
        },
        {"filter": "datum.ranking == 1"},
        {
          "calculate": "datum['Country'] + ' has the highest; English Proficiency.' ",
          "as": "text_annotation_raw"
        },
        {
          "calculate": "split(datum.text_annotation_raw,';')",
          "as": "text_annotation"
        }
      ],
      "mark": {
        "type": "text",
        "align": "right",
        "dx": -8,
        "dy": -8,
        "baseline": "middle",
        "fontStyle": "bold"
        },
        "encoding": {"text": {
          "field": "text_annotation"
          },
        "longitude": {"field": "Long", "type": "quantitative"},
        "latitude": {"field": "Lat", "type": "quantitative"},
        "color":{"value":"Green"}}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/jjah0001/FIT3179/main/Assignment2/data/Proficiency_with_long_lat.csv"
      },
      "transform": [
        {"filter": "colonialism == null || datum.Colony == colonialism"},
        {
        "window": [{"op": "rank", "as": "ranking"}],
        "sort": [{"field": "Score", "order":
        "ascending"}]
        },
        {"filter": "datum.ranking == 1"},
        {
          "calculate": "datum['Country'] + ' has the lowest; English Proficiency.' ",
          "as": "text_annotation_raw"
        },
        {
          "calculate": "split(datum.text_annotation_raw,';')",
          "as": "text_annotation"
        }
      ],
      "mark": {
        "type": "text",
        "align": "right",
        "dx": -8,
        "dy": -8,
        "baseline": "middle",
        "fontStyle": "bold"
        },
        "encoding": {"text": {
          "field": "text_annotation"
          },
        "longitude": {"field": "Long", "type": "quantitative"},
        "latitude": {"field": "Lat", "type": "quantitative"},
        "color":{"value":"red"}}
    }
  ]
}